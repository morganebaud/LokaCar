<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MainActivity">

    <include layout="@layout/toolbar_perso" />

    <!--Button
    tools:context=".controller.MainActivity">

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go"/-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/acitivty_main_tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mail" />

        <EditText
            android:id="@+id/activity_main_et_mail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/acitivty_main_tv_agence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agence" />

        <Spinner
            android:id="@+id/activity_main_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/acitivty_main_tv_mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe" />

        <EditText
            android:id="@+id/activity_main_et_mdp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="" />

        <CheckBox
            android:id="@+id/acitivty_main_cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se souvenir de moi" />

        <Button
            android:id="@+id/acitivty_main_btn_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="ConectionClick"
            android:text="Connexion" />
    </LinearLayout>
</LinearLayout>