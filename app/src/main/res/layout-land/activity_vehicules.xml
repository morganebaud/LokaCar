<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.VehiculesActivity">

    <include layout="@layout/toolbar_perso" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/vehiculesFragment"
            android:name="fr.ecole.eni.lokacar.fragment.VehiculesFragment"
            class="fr.ecole.eni.lokacar.fragment.VehiculesFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />

        <fragment
            android:id="@+id/fragmentDetail"
            android:name="fr.ecole.eni.lokacar.fragment.DetailFragment"
            class="fr.ecole.eni.lokacar.fragment.DetailFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6" />

    </LinearLayout>

</LinearLayout>