<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAmber400</item>
        <item name="colorPrimaryDark">@color/colorAmber700</item>
        <item name="colorAccent">@color/colorAmber100</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- pour la progressbar -->
    <style name="AppTheme.GreenAccent">
        <item name="colorPrimary">@color/colorAmber500</item>
        <item name="colorPrimaryDark">@color/colorAmber600</item>
        <item name="colorAccent">@color/colorAmber700</item>
    </style>

</resources>
